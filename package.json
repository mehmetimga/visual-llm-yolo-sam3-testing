{
  "name": "ai-ui-automation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Cross-Platform AI UI Automation (Web + Flutter) PoC",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm --filter orchestrator run test",
    "test:web": "pnpm --filter orchestrator run test -- --platform web",
    "test:flutter": "pnpm --filter orchestrator run test -- --platform flutter",
    "dev:web": "pnpm --filter demo-web dev",
    "dev:orchestrator": "pnpm --filter orchestrator dev",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}

